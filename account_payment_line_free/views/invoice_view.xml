<odoo>
    <record id="account_invoice_free_view" model="ir.ui.view">
        <field name="name">account.move.free.form</field>
        <field name="model">account.move.free</field>
        <field name="arch" type="xml">
            <form string="Free Invoices from payment order">
                <p class="oe_warning">
                    This will extract payment lines corresponding to selected
                    invoices and put them in a cancelled payment order. This way,
                    invoices can be added to another payment order.
                </p>
                <footer>
                    <button string="Unlink invoices" name="invoice_free" type="object" default_focus="1"
                            class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_account_invoice_free">
        <field name="name">Unlink from Payment/Debit Order</field>
        <field name="res_model">account.move.free</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="account_invoice_free_view"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
    </record>
</odoo>
