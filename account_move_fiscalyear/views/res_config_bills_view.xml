<odoo>
    <data>
        <record id="view_account_config_settings_inherit" model="ir.ui.view">
            <field name="name">res.settings.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="child_compassion.compassion_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invoicing_settings']" position="inside">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="move_bills_date" widget="upgrade_boolean"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="move_bills_date"/>
                            <div class="text-muted">
                                Automatically move open customer invoice moves to the next fiscal year
                                    <a target="_blank">Invoices auto-move</a>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
